tx_cascading$AUC.0h4h <- rank(tx_cascading$AUC.0h4h)
tx_cascading$AUC.0h6h <- rank(tx_cascading$AUC.0h6h)
tx_cascading$AUC.0h8h <- rank(tx_cascading$AUC.0h8h)
tx_cascading$AUC.0h10h <- rank(tx_cascading$AUC.0h10h)

